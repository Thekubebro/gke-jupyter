---
  apiVersion: extensions/v1beta1
  kind: Deployment
  metadata:
    name: nginx
    namespace: jupyterhub
  spec:
    replicas: 1
    template:
      metadata:
        labels:
          app: proxy
      spec:
        containers:
        - name: proxy
          image: <REPOSITORY_IMAGE_PATH>/k8s-cmap-nginx:latest
          ports:
          - containerPort: 80
          - containerPort: 443
          readinessProbe:
            httpGet:
              path: /healthcheck
              port: 80
            periodSeconds: 1
            timeoutSeconds: 1
            successThreshold: 1
            failureThreshold: 10
          env:
          - name: NG_CONF_SSL_CER_FILE
            value: "/mnt/secure/tls.crt"
          - name: NG_CONF_SSL_KEY_FILE
            value: "/mnt/secure/tls.key"
          - name: NG_CONF_DHPARAM_FILE
            value: "/mnt/secure/dhparam.pem"
          - name: NG_CONF_OUTPUT
            value: "/etc/nginx/nginx.custom.conf"
          - name: NG_CONF_INPUT
            value: "/mnt/config/nginx.conf"
          volumeMounts:
          - mountPath: /mnt/secure
            name: certs
            readOnly: true
          - mountPath: /mnt/config
            name: nginx-conf
          resources:
            limits:
              cpu: 100m
              memory: 1000Mi
            requests:
              cpu: 100m
              memory: 1000Mi
        volumes:  
        - name: "certs"
          secret: 
            secretName: "jhub-tls"
        - name: nginx-conf
          configMap:
            name: jhub-nginx-conf
---
  kind: Service
  apiVersion: v1
  metadata:
    name: jupyterhub-proxy
    namespace: jupyterhub
  spec:
    type: LoadBalancer
    <STATIC_IP>
    selector:
      app: proxy
    ports:
      - protocol: TCP
        port: 443
        targetPort: 443
        name: proxyssl
      - protocol: TCP
        port: 80
        targetPort: 80
        name: proxy
